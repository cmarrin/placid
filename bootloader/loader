
MEMORY
{
    ram : ORIGIN = 0x0800, LENGTH = 0x6000
}

SECTIONS
{
    .text : { *(.text*) } > ram
    .rodata : { *(.rodata*) } > ram
    .init_array : {
        __init_start = .;

        *(.init_array*)

        __init_end = .;
    } > ram
    .data : { *(.data*) } > ram
    .bss : {
        __bss_start = .;

        *(.bss*)
        *(COMMON)

        _end = .;
    } > ram
}

